<!DOCTYPE html>
<html lang="en">
	<head>
    <meta charset="utf-8">
    <title><%= Cache.setting(Rails.configuration.domain_id, :system, 'Website Name')%>: <%= yield :title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Rhombus CMS, Inc.">

    <link href="//cdn5.io/rhombus/sb-admin-2/css/bootstrap.min.css" rel="stylesheet">
    <link href="//cdn5.io/rhombus/sb-admin-2/css/sb-admin-2.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="//cdn5.io/rhombus/datetimepicker/jquery.datetimepicker.css" rel="stylesheet">
    <link href="//cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">
    <link href="//cdn5.io/rhombus/footable/css/footable.bootstrap.min.css" rel="stylesheet">

    <script src="//cdn5.io/rhombus/sb-admin-2/js/jquery-1.11.0.js"></script>
	  <script src="//code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>
    <script src="//cdn5.io/rhombus/sb-admin-2/js/bootstrap.min.js"></script>
    <script src="//cdn5.io/rhombus/sb-admin-2/js/sb-admin-2.js"></script>
    <script src="//cdn5.io/rhombus/datetimepicker/jquery.datetimepicker.js"></script>
    <script src="//cdn5.io/rhombus/sb-admin-2/js/plugins/metisMenu/metisMenu.min.js"></script>
	  <script src="//cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js"></script>
	  <script src="//cdn5.io/js/rails.js"></script>
    <script src="//cdn5.io/rhombus/footable/js/footable.min.js"></script>

	  <%= csrf_meta_tags %>

    <script>
  
      /*var wavesurfer = Object.create(WaveSurfer);
    	var wavesurfer_initialized = false;*/
      
      function popup(current_time,$input){
        alert(current_time);
      }
      

      $(document).ready(function() {
        
        $('.footable').footable();
        
        $("#domain-selector").on("change", function() {
          window.location = "/admin/system/domains/" + $(this).val() + "/set_current";
        });
        
        $('.datetime-field').datetimepicker({	formatTime:'g:i A', format: 'Y-m-d h:i A' });
        $('.date-field').datetimepicker({format: 'Y-m-d', timepicker: false, mask: true});
        $('.input-group.date').datepicker({format: 'yyyy-mm-dd', autoclose: true});
    
        
      });
    </script>
	  
	  <%= yield :head %>
	</head>



    <body>

    <div id="wrapper">

    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0; ">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/admin"><i class="fa fa-home"></i> <%= Cache.setting(:system, "Website Name") %> Administration</a>
    </div>
    <!-- /.navbar-header -->



    <ul class="nav navbar-top-links navbar-right">
    <% domains = Cache.domains %>
    <% if domains.length > 1 %>
    <li>
      <select name="domain_id" id="domain-selector">
      <% domains.each do |d| %>
        <option value="<%= d.id %>" <%= "selected" if cookies["domain_id"] == d.id.to_s %>><%= d.name %></option>
      <% end %>
      </select>
    </li>
    <% end %>
    <!-- /.dropdown -->
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        <i class="fa fa-bell fa-fw"></i>  <i class="fa fa-caret-down"></i>
      </a>
      <ul class="dropdown-menu dropdown-alerts">
        <li>
          <a href="#">
            <div>
              <i class="fa fa-comment fa-fw"></i> New Comment
              <span class="pull-right text-muted small">4 minutes ago</span>
            </div>
          </a>
        </li>
        <li class="divider"></li>
        <li>
          <a class="text-center" href="#">
            <strong>See All Alerts</strong>
            <i class="fa fa-angle-right"></i>
          </a>
        </li>
      </ul>
      <!-- /.dropdown-alerts -->
    </li>
    <!-- /.dropdown -->
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
      </a>
      <ul class="dropdown-menu dropdown-user">
        <li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
        </li>
        <li><a href="/admin/clear_cache"><i class="fa fa-gear fa-fw"></i> Clear Cache</a>
        </li>
        <li class="divider"></li>
        <li><a href="<%= admin_logout_path %>"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
        </li>
      </ul>
      <!-- /.dropdown-user -->
    </li>
    <!-- /.dropdown -->
    </ul>
    <!-- /.navbar-top-links -->



    <div class="navbar-default sidebar" role="navigation">
      <div class="sidebar-nav navbar-collapse">

      <ul class="nav" id="side-menu">

        <li class="sidebar-search">
          <form action="/admin/search" class="input-group custom-search-form">
           <input type="text" name="q" class="form-control" placeholder="Search...">
           <span class="input-group-btn">
           	<button class="btn btn-default">
            	<i class="fa fa-search"></i>
            </button>
            </span>
          </form>
          <!-- /input-group -->
        </li>

        <li><a href="/admin"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a></li>

    		<%= render "admin/shared/billing_menu" if Rails.configuration.modules.include?(:billing) %>
    		<%= render "admin/shared/callcenter_menu" if Rails.configuration.modules.include?(:callcenter) %>
    		<%= render "admin/shared/cms_menu" if Rails.configuration.modules.include?(:cms) %>
    		<%= render "admin/shared/store_menu" if Rails.configuration.modules.include?(:store) %>
    		<%= render "admin/shared/marketing_menu" if Rails.configuration.modules.include?(:marketing) %>
    		<%= render "admin/shared/pbx_menu" if Rails.configuration.modules.include?(:pbx) %>
    		<%= render "admin/shared/ticketing_menu" if Rails.configuration.modules.include?(:ticketing) %>
        <%= render "admin/shared/edi_menu" if Rails.configuration.modules.include?(:edi) %>
        <%= render "admin/shared/system_menu" %>
      </ul>

        <!-- /#side-menu -->
      </div>
      <!-- /.sidebar-collapse -->
    </div>
    <!-- /.navbar-static-side -->
    </nav>

    <div id="page-wrapper">
      <div class="row">
        <div class="col-lg-12">
    		  <ol class="breadcrumb">
    		  	<%= yield :breadcrumbs %>
    		  </ol>
          <%= render 'admin/shared/error_messages', object: nil %>
          <%= yield %>
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

    </div>
    
    <input type="hidden" id="audio-file" value=""/>
    <div id="audio-popup" class="modal fade">
    	<div class="modal-dialog">
    		<div class="modal-content">
    		  <div class="modal-header">
    		    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    		    <h4>Voicemail</h4>
    		  </div>

    		  <div class="modal-body">
  
    		    <div id="wave-timeline"></div>
    		    <div id="waveform"></div>

    		    <div class="controls">
    		      <button class="btn btn-primary back">
    		        <i class="icon-step-backward"></i> Backward
    		       </button>

    		       <button class="btn btn-primary play">
    		        <i class="icon-play"></i>
    		          Play
    		          /
    		          <i class="icon-pause"></i>
    		          Pause
    		        </button>

    		        <button class="btn btn-primary forth">
    		          <i class="icon-step-forward"></i>
    		          Forward
    		        </button>
    		    </div>
      	  	  </div>
  
    		  <div class="modal-footer">
    		    <a href="#" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Close</a>
    		  </div>
		  
    		</div>
    	</div>
    </div>

    </body>


  </html>
