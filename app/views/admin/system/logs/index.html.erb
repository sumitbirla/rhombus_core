<h2>Logs</h2>

<%= will_paginate @logs %>
<table class="table table-striped table-condensed">
	<tr>
		<th><%= sortable "timestamp" %></th>
    <th><%= sortable "event" %></th>
		<th><%= sortable "ip_address" %></th>
    <th><%= sortable "core_users.name", "Name" %></th>
		<th><%= sortable "data1" %></th>
		<th><%= sortable "data2" %></th>
    <th><%= sortable "data3" %></th>
	</tr>
	<% @logs.each do | log | %>
	<tr>
		<td><%= systime login.timestamp %></td>
    <td><%= log.event %></td>
    <td><%= log.ip_address %></td>
		<td>
      <% unless log.user.nil? %>
        <%= link_to log.user, admin_system_user_path(log.user)  %>
      <% else %>
        User: <%= log.user_id %>
      <% end %>
    </td>
		<td><%= log.data1 %></td>
		<td><%= log.data2 %></td>
		<td><%= log.data3 %></td>
	</tr>
	<% end %>
</table>


<%= render 'admin/shared/table_summary', data: @logs %>


<% content_for :title do %>
    Recent Logins
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">System</a></li>
	<li class="active">Recent Logins</li>
<% end %>
