<h2>Recent Logins</h2>

<%= will_paginate @logins %>
<table class="table table-striped table-condensed">
	<tr>
		<th><%= sortable "timestamp" %></th>
		<th><%= sortable "core_users.name", "Name" %></th>
    <th><%= sortable "source" %></th>
		<th><%= sortable "ip_address" %></th>
		<th><%= sortable "user_agent", "Platform"%></th>
		<th>Browser</th>
	</tr>
	<% @logins.each do | login | 
		user_agent = UserAgent.parse(login.user_agent)%>
	<tr>
		<td><%= systime login.timestamp %></td>
		<td>
    <% unless login.user.nil? %>
      <%= link_to login.user, admin_system_user_path(login.user)  %>
    <% else %>
      User: <%= login.user_id %>
    <% end %>
    </td>
    <td><%= login.source %></td>
		<td><%= login.ip_address %></td>
		<td><%= user_agent.platform %></td>
		<td><%= user_agent.browser %> <%= user_agent.version %></td>
	</tr>
	<% end %>
</table>


<%= render 'admin/shared/table_summary', data: @logins %>


<% content_for :title do %>
    Recent Logins
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">System</a></li>
	<li class="active">Recent Logins</li>
<% end %>
