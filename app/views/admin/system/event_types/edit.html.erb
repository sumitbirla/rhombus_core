<h2><i class="icon-bell"></i> New Event Type</h2>
<hr/>
<%= simple_form_for [:admin, :system, @event_type] do |f| %>
  <%= render 'admin/shared/error_messages', object: f.object %>

  <%= f.input :name %>
  <%= f.input :description %>

  <%= button_tag "Save changes", :class => "btn btn-primary",
                 data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Please wait ..."} %>
<% end %>



<% content_for :title do %>
  New Event Type
<% end %>


<% content_for :breadcrumbs do %>
  <li><a href="#">System</a></li>
  <li><%= link_to "Events", admin_system_events_path %></li>
  <li class="active">New Event</li>
<% end %>
