<h2>Roles</h2>
<table class="table table-striped table-condensed">
	<tr>
		<th>Name</th>
		<th>Is default</th>
		<th>Is super user</th>
		<th>Users</th>
		<th>&nbsp;</th>
	</tr>
	<% @roles.each do | role | %>
	<tr>
		<td><%= link_to role.name, edit_admin_system_role_path(role) %></td>
		<td><%= raw tick role.default %></td>
		<td><%= raw tick role.super_user %></td>
		<td><%= role.users.count %></td>
		<td class="actions">
			<%= link_to "edit", edit_admin_system_role_path(role) %> &nbsp; 
			<%= link_to "delete", 
						  { action: "destroy", id: role.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>


<%= content_for :title do %>
	Roles
<% end %>

<% content_for :menu do
    render "admin/shared/system_menu"
end %>

<% content_for :breadcrumbs do %>
	<li><a href="#">System</a></li>
	<li class="active">Roles</li>
<% end %>
