<div class="pull-right"><%= link_to "new attribute", new_admin_system_attribute_path(type: params[:type]), class: "btn btn-default btn-sm" %></div>

<h2><%= params[:type].titlecase %> Attributes</h2>


<table class="table table-striped table-condensed">
	<tr>
		<th>Sort</th>
		<th>Name</th>
		<th>Type</th>
		<th>Visible</th>
		<th>Notes</th>
		<th>&nbsp;</th>
	</tr>
	<% @attributes.each do |attr| %>
	<tr>
		<td><%= attr.sort%></td>
		<td><%= attr.name %></td>
		<td><%= attr.data_type %></td>
		<td><%= tick !attr.hidden %></td>
		<td><%= attr.notes %></td>
		<td>
			<%= link_to "edit", edit_admin_system_attribute_path(attr) %> &nbsp; 
			<%= link_to "delete", 
						  { action: "destroy", id: attr.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
			
		</td>
	</tr>
	
	<% end %>
</table>


<% content_for :title do %>
	<%= params[:type].titlecase %> Attributes
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Web Content</a></li>
	<li class="active"><%= params[:type].titlecase %> Attributes</li>
<% end %>
