<%= link_to new_admin_system_search_path_path, class: 'pull-right btn btn-sm btn-default' do %>
  <i class="fa fa-plus"></i> New search path
<% end %>

<h2><i class="fa fa-search"></i> Search Paths</h2>
<hr>

<table class="table table-striped table-condensed">
	<tr>
		<th>Short Code</th>
		<th>URL</th>
		<th>Description</th>
		<th class="actions">&nbsp;</th>
	</tr>
	<% @search_paths.each do | path | %>
	<tr>
		<td><code><%= path.short_code %></code></td>
		<td><%= path.url %></td>
		<td><%= path.description %></td>
		<td class="actions">
			<%= link_to "edit", edit_admin_system_search_path_path(path) %> &nbsp; 
			<%= link_to "delete", 
						  { action: "destroy", id: path.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>


<%= content_for :title do %>
	Search Paths
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">System</a></li>
	<li class="active">Search Paths</li>
<% end %>
