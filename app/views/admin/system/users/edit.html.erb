<h2><i class="icon-user"></i> &nbsp;<%= @user.name %></h2>
<hr/>

<%= render 'admin/shared/error_messages', object: @user %>

<%= simple_form_for [:admin, :system,  @user], html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>

  <div class="col-md-6">
    <%= f.input :password_digest, as: :hidden %>
    <%= f.input :name%>
    <%= f.association :domain %>
    <%= f.association :role %>
    <%= f.association :affiliate %>
    <%= f.input :email  %>
    <%= f.input :phone %>
    <%= f.input :birth_date, as: :string, input_html: { class: "date-field" } %>
    <%= f.input :gender, collection: [ 'male', 'female' ]  %>
    <%= f.input :avatar_url %>
    <%= f.input :vip %>
  </div>
    
  <div class="col-md-6">
    <%= f.input :status, as: :select, collection: ['active', 'pending', 'deactived', 'Z'] %>
    
    <%= f.input :pin  %>
    <%= f.input :referral_key %>
    <%= f.input :locale %>
    <%= f.input :location %>
    <%= f.input :time_zone %>
    <%= f.input :data1 %>
    <%= f.input :data2 %>
  
    <div class="form-group string optional password">
      <label class="string optional col-sm-3 control-label" for="password">Password</label>
      <div class="col-sm-9">
        <input class="string optional form-control" type="password" name="password" id="password"> (leave blank if not updating)
      </div>
    </div>
  </div>
  
  <div class="col-md-12">
    <%= f.button :submit %>
  </div>
  
<% end %>



<% content_for :title do %>
	Users: <%= @user.name %>
<% end %>


<% content_for :menu do
    render "admin/shared/system_menu"
end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">System</a></li>
	<li><%= link_to "Users", admin_system_users_path %></li>
    <% if @user.id.nil? %>
        <li class="active"><%= @user.name %></li>
    <% else %>
	    <li><%= link_to @user.name, admin_system_user_path(@user) %></li>
	    <li class="active">edit</li>
    <% end %>
<% end %>