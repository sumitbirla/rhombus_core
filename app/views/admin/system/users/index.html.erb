<%= link_to "New User", new_admin_system_user_path, class: 'btn btn-sm btn-default pull-right' %>
<h2><i class="icon-user"></i> <%= Domain.find(cookies[:domain_id]) %> Users</h2>


<% unless params[:q].nil? %>
    <div class="alert alert-info">Found <%= @users.total_entries %> records matching '<%= params[:q] %>'</div>
<% end %>

<%= will_paginate @users %>
<table class="table table-striped table-condensed">
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>Role</th>
		<th>Created</th>
		<th>&nbsp;</th>
	</tr>
	<% @users.each do |user| %>
	<tr>
		<td><%= link_to user.name, admin_system_user_path(user) %></td>
		<td><%= user.email %>
		<td><%= user.role.name %></td>
		<td><%= systime user.created_at %></td>
		<td>
			<%= link_to "edit", edit_admin_system_user_path(user) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: user.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>

<div class="table-summary">
	<%= number_with_delimiter(@users.total_entries) %> records | <%= link_to 'CSV', admin_system_users_path(format: :csv) %>
</div>



<%= content_for :title do %>
	Users
<% end %>


<% content_for :menu do
    render "admin/shared/system_menu"
end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">System</a></li>
	<li class="active">Users</li>
<% end %>