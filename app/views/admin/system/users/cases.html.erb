<%=  render partial: 'admin/shared/user_summary', locals: { user: @user } %>
<%=  render partial: 'admin/shared/user_tabs', locals: { user: @user, counts: @counts, selected: :cases } %>

<%= will_paginate @cases %>
<table class="table table-striped table-condensed">
  <tr>
    <th>ID</th>
    <th>From</th>
    <th>Subject</th>
    <th>Assigned to</th>
    <th>Last update</th>
    <th>Priority</th>
    <td>Status</td>
  </tr>
  <% @cases.each do |c| %>
      <tr>
        <td><%= link_to c.id, admin_ticketing_cases_path(c) %></td>
        <td>
          <% if c.user_id %>
              <%= link_to c.user.name, admin_system_user_path(c.user_id) %>
          <% else %>
              <%= c.email || c.phone %>
          <% end %>
        </td>
        <td><%= c.subject %></td>
        <td><% unless c.assigned_to.nil? %>
              <%= link_to c.assignee.name, admin_system_user_path(c.assigned_to) %>
          <% else %>
              - none -
          <% end%>
        </td>
        <td><%= c.updated_at %></td>
        <td><%= c.priority %></td>
        <td><%= c.status %></td>
      </tr>
  <% end %>
</table>


<%= content_for :title do %>
	Users: <%= @user.name %>
<% end %>


<% content_for :menu do
    render "admin/shared/system_menu"
end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">System</a></li>
	<li><%= link_to "Users", admin_system_users_path %></li>
	<li class="active"><%= @user.name %></li>
<% end %>