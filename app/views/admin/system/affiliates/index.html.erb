<div class="pull-right">
    <%= link_to "new affiliate", new_admin_system_affiliate_path, class: 'btn btn-sm btn-default' %>
    <%= link_to "setup categories", admin_system_categories_path(type: :affiliate), class: 'btn btn-sm btn-default' %>
</div>

<h2>Affiliates</h2>

<% unless params[:q].nil? %>
    <div class="alert alert-info">Found <%= @affiliates.total_entries %> records matching '<%= params[:q] %>'</div>
<% end %>

<%= will_paginate @affiliates %>
<table class="table table-striped table-condensed">
  <tr>
	<th>Name</th>
	<th>Contact person</th>
	<th>Location</th>
	<th>&nbsp;</th>
  </tr>
  <% @affiliates.each do | affiliate | %>
    <tr>
	  <td><%= link_to affiliate.name, admin_system_affiliate_path(affiliate) %></td>
	  <td><%= affiliate.contact_person %></td>
	  <td><%= affiliate.city %>, <%= affiliate.state %></td>
	  <td>
	  	<%= link_to "edit", edit_admin_system_affiliate_path(affiliate) %> &nbsp; 
		<%= link_to "delete", { action: "destroy", id: affiliate.id }, method: :delete,  data: { confirm: "Are you sure?" } %>
	  </td>
	</tr>
  <% end %>
</table>

<div class="table-summary">
	<%= number_with_delimiter(@affiliates.total_entries) %> records | <%= link_to 'CSV', admin_system_affiliates_path(format: :csv) %>
</div>

<%= content_for :title do %>
	Affiliates
<% end %>


<% content_for :menu do
    render "admin/shared/system_menu"
end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">System</a></li>
	<li class="active">Affiliates</li>
<% end %>

